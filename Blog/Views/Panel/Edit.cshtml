@model PostViewModel
@{

}
<link rel="stylesheet" href="~/lib/Trumbowyg-main/dist/ui/trumbowyg.min.css">
<div>
    <form asp-controller="Panel" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="ID"/>
        <div>
            <label>Title</label>
            <input asp-for="Title"/>
        </div>
        <div>
            <label>Description</label>
            <input asp-for="Description"/>
        </div>
        <div>
            <label>Tags</label>
            <input asp-for="Tags"/>
        </div>
        <div>
            <label>Category</label>
            @*<input asp-for="Category"/>*@
            <select asp-for="Category">
                <option value="Photography">Photography</option>
                <option value="Programming">Programming</option>
                <option value="Travel">Travel</option>
            </select>
        </div>
        <div>
            <label>Body</label>
            <textarea id="editor" asp-for="Body"></textarea>
        </div>
        <div>
            <label>Image</label>
            <input asp-for="CurrentImage" type="hidden"/>
            <input asp-for="Image"/>
        </div>
        <input type="submit" value="Submit"/>
    </form>
</div>

@section scripts {
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/lib/Trumbowyg-main/dist/trumbowyg.min.js"></script>
    <script>
    $('#editor').trumbowyg();
    </script>
}